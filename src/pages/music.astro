---
import Hero from "../components/Hero.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import MiniSynth from "../components/MiniSynth.astro";
---

<BaseLayout
	title="Mini-Synth | Rikuo Wada"
	description="Play an in-browser synthesizer!"
>
	<div class="stack gap-20">
		<main class="wrapper stack gap-8">
			<Hero
				title="Music"
				tagline="Check out some of my music projects!"
				align="start"
			/>
			<div class="synth-container">
				<div>
					<MiniSynth />
					<div class="synth-description">
						<p>
							Play this mini synth by pressing the keys on the
							synth or by pressing A through K for white keys or
							W, E, T, Y, and U black keys on your computer
							keyboard!
						</p>
						<p>Add effects with the checkboxes!</p>
					</div>
				</div>
				<div>
					<iframe
						width="100%"
						height="166"
						scrolling="no"
						frameborder="no"
						allow="autoplay"
						src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/soundcloud%253Atracks%253A1519950229&color=%23ff5500&auto_play=false&hide_related=false&show_comments=true&show_user=true&show_reposts=false&show_teaser=true"
					></iframe><div
						style="font-size: 10px; color: #cccccc;line-break: anywhere;word-break: normal;overflow: hidden;white-space: nowrap;text-overflow: ellipsis; font-family: Interstate,Lucida Grande,Lucida Sans Unicode,Lucida Sans,Garuda,Verdana,Tahoma,sans-serif;font-weight: 100;"
					>
						<a
							href="https://soundcloud.com/user-970576872"
							title="RIKU"
							target="_blank"
							style="color: #cccccc; text-decoration: none;"
							>RIKU</a
						> Â· <a
							href="https://soundcloud.com/user-970576872/power"
							title="POWER"
							target="_blank"
							style="color: #cccccc; text-decoration: none;"
							>POWER</a
						>
					</div>
					<p>Check out some music I made on SoundCloud!</p>
				</div>
			</div>
		</main>
	</div>
</BaseLayout>

<style>
	.synth-description {
		margin: 0 auto;
		max-width: 400px;
	}

	.synth-container {
		display: flex;
		justify-content: center;
		gap: 6rem;
	}

	iframe {
		margin-top: 2.75rem;
		width: 100%;
	}

	@media (max-width: 800px) {
		.synth-container {
		 flex-direction: column;
		}

		iframe {
			margin-top: unset;
		}
	}
</style>
